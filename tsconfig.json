{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "newLine": "lf",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@block-kit/core": ["./packages/core/src"],
      "@block-kit/delta": ["./packages/delta/src"],
      "@block-kit/react": ["./packages/react/src"],
      "@block-kit/plugin": ["./packages/plugin/src"],
      "@block-kit/utils": ["./packages/utils/src"],
      "@block-kit/utils/dist/es/*": ["./packages/utils/src/*"],
      "@block-kit/vue": ["./packages/vue/src"],
      "@block-kit/variable": ["./examples/variable/src"],
      "@block-kit/stream": ["./examples/stream/src"]
    }
  },
  "include": ["packages/*/src"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
